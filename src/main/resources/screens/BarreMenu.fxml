<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="laBarre" prefHeight="22.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.ent.etrs.megamovies.controllers.BarreMenuController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Movies">
                    <items>
                        <MenuItem fx:id="listerFilms" mnemonicParsing="false" onAction="#listerFilms" text="Lister les films" />
                        <MenuItem fx:id="ajouterFilm" mnemonicParsing="false" onAction="#ajouterFilm" text="Ajouter un film" />
                        <MenuItem fx:id="quitter" mnemonicParsing="false" onAction="#quitter" text="Quitter" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Aide">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#apropos" text="A propos" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</VBox>
